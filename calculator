#include <iostream>
#include <cmath>
#include <windows.h>

using namespace std;

void addition(double a, double b) {
    cout << a << "+" << b << "=" << a + b << endl;
}
void subtraction(double a, double b) {
    cout << a << "-" << b << "=" << a - b << endl;
}
void multiplication(double a, double b) {
    cout << a << "*" << b << "=" << a * b << endl;
}
void division(double a, double b) {
    if (b != 0) {
        cout << "Ошибка!!" << endl;
    }
}
void power(long double a, double b) {
    cout << a << "^" << b << "=" << pow(a, b) << endl;
}


int main() {
    SetConsoleOutputCP(CP_UTF8);

    char operation;
    double a, b;
    int choice;
    int n;

    cout << "Выберите тип операции:" << '\n' << "Математическая операция - 1" << '\n'
         << "Вычисление факториала - 2" << '\n' << "Сумма матриц - 3" << '\n';
    cin >> choice;

    while (choice == 1) {
        cout << "Введите выражение: ";
        cin >> a >> operation >> b;
        switch (operation) {
            case '+':
                addition(a, b);
                break;
            case '-':
                subtraction(a, b);
                break;
            case '*':
                multiplication(a, b);
                break;
            case '/':
                division(a, b);
                break;
            case '^':
                power(a, b);
                break;
            default:
                cout << "Error" << endl;
        }
    }
    while (choice == 2) {
        cout << "Вычисление факториала: " << endl;
        cin >> a;
        unsigned long long int f = 1;
        for (long int i = 1; i <= a; i++) {
            f = f * i;
        }
        cout << a << "!" << "=" << f << "\n";
        break;
    }
    while (choice == 3) {
        int matrix1[3][3];
        int matrix2[3][3];

        cout << "Введите первую матрицу:" << "\n";
        for (int i = 0; i < 3; i++) {
            for (int j = 0; j < 3; j++) {
                cin >> n;
                matrix1[i][j] = n;
            }
        }
        cout << "Первая матрица:" << '\n';

        for (int i = 0; i < 3; i++) {
            for (int j = 0; j < 3; j++) {
                cout << matrix1[i][j] << "\t";
            }
            cout << "\n";
        }

        cout << "Введите вотрую матрицу:" << "\n";
        for (int i = 0; i < 3; i++) {
            for (int j = 0; j < 3; j++) {
                cin >> n;
                matrix2[i][j] = n;
            }
        }

        cout << "Вторая матрица:" << '\n';
        for (int i = 0; i < 3; i++) {
            for (int j = 0; j < 3; j++) {
                cout << matrix2[i][j] << "\t";
            }
            cout << "\n";
        }
        cout << "Сумма матриц: " << "\n";
        for (int i = 0; i < 3; i++) {
            for (int j = 0; j < 3; j++) {
                cout << matrix1[i][j] + matrix2[i][j] << "\t";
            }
            cout << "\n";
        }
        break;
    }
    return 0;
}
